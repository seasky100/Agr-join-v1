<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.fundview.app.activity.expert.GuestExpertListActivity">
    <android.support.v7.widget.Toolbar
        android:id="@id/toolBar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorAccent">

        <ImageButton
            android:id="@id/backImageBtn"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="0dp"
            android:scaleType="center"
            android:src="@mipmap/title_back" />
        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/guest_expert"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@id/search"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="right"
            android:scaleType="center"
            android:src="@mipmap/search_bar_icon_normal" />
    </android.support.v7.widget.Toolbar>
    <cn.fundview.app.view.common.pullrefresh.PullToRefreshRecyclerView
        android:id="@id/pullRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

</LinearLayout>
